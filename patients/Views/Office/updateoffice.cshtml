@model VmOffice


<style>
	.card-body {
		margin-right: -265px;
		margin-left: 280px;
	}
</style>





<div style="text-align: center;">
	<h1>Please update doctor's Office information</h1>
</div>




<div class="col-6">

	<div class="card-body">
		<form method="post" action="/Office/editoffice">
        <div class="mb-3">

				<input type="text" class="form-control" placeholder="Id" asp-for="Id" style="display:none;">
			</div>
			<div class="mb-3">

				<input type="text" class="form-control" placeholder="Address" asp-for="Address">
			</div>
			<div class="mb-3">

				<input type="Email" class="form-control" placeholder="Email" asp-for="Email">
			</div>
			<div class="mb-3">
				<input type="text" class="form-control" placeholder="Name/office" asp-for="NameOffice">
			</div>
			<div class="mb-3">

				<input type="number" class="form-control" placeholder="PhoneNumber" asp-for="PhoneNumber">
			</div>


			<div style="text-align: center;">
				<button type="submit" class="btn btn-success">Update</button>
			</div>

		</form>
	</div>
</div>
</div>
